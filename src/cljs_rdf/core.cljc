(ns cljs-rdf.core)

(defmacro defns
  "Create a new namespace"
  [prefix namespace]
  (let
   [relative (gensym "relative-")]
    `(defn ~prefix
       [~relative]
       (cljs-rdf.core/iri
        (str ~namespace (name ~relative))))))
